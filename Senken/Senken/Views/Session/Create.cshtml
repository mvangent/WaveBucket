@model Senken.Models.Session

@{
    ViewBag.Title = "Create";
}

<hr />


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    
    
    <div id="createSession" align="center">
       
       
        <br /><br /><br /><br />
        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        
        @Html.TextBoxFor(model => model.Title, new { @class = "textboxforTitle", type = "text", id = "sessionTitle", minLength = "1", maxlength = "15",  align="center", placeholder="Session Name (not permanent)", pattern=".{3,}", required="enter at least three characters" })
        <br />
       
        <input type="submit" id="CreateSessionButton" value="Start Session" class="btn btn-default" />
        &nbsp; &nbsp;
        <text class="senkenDescriptions">MultiTweaking On? @Html.CheckBoxFor(model => model.OpenToEvolution, "OpenToEvolution") </text>



     
        
        
       
        
        <br /> <br /> <br />

        

        
        <text>or still <a href="~/Session/Index" id="exploreLink">explore</a> what is already out there?</text>
        
    </div> 
    



}




@section Scripts {

    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.1.2.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    @Scripts.Render("~/bundles/jqueryval")
}

<script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>


    
   